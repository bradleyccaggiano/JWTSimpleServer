{
  "name": "jwt-simpleserver-client",
  "version": "0.0.1",
  "description": "Javascript client library for Asp.Net Core Jwt Simple Server package. The client API offers easy token and refresh token retrieval and a configurable interval refresh token service with client notifications",  
  "scripts": {    
    "build": "webpack --config ./webpack.config.js && tsc",
    "test": "jest"
  },
  
  "author": "Xabaril",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "jest": "^22.2.1",
    "ts-jest": "^22.0.3",
    "ts-loader": "^3.5.0",
    "typescript": "^2.7.1",
    "webpack": "^3.10.0"
  },
  "main": "dist/index.js",  
  "typings": "dist/index.d.ts",
  "files": [    
    "dist/**/*.*"    
  ],
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
